<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
<div class="container">
    <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
    <div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>String</th>
                <th>Integer</th>
                <th>Float</th>
                <th>Date</th>
                <th>Boolean</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index) => { %>
            <tr>
                <td><%= index+1 %></td>
                <td><%= item.string %></td>
                <td><%= item.integer %></td>
                <td><%= item.float %></td>
                <td><%= item.date %></td>
                <td><%= item.boolean %></td>
                <td>
                    <a href="/edit/<%= index %>"><button class="btn btn edit" > EDIT </button></a>
                    <a href="/delete/<%= index %>"><button class="btn btn delete" onclick="return confirm('Apakah anda yakin ingin menghapus data ini?')"> DELETE </button></a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/add"><button class="btn add" > Add </button></a>
    </div>
</div>

    

</body>

</html>